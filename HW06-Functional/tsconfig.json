{
  "compilerOptions": {
    "lib": [
      "es2015"
    ],
    "outDir": "./out",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2016",
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": false,
    "moduleResolution": "node",
    "strict": true,
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "include": [
    "./__tests__/**/*",
    "./src/**/*",
    "./"
  ]
}
